<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <div class="md:hidden px-4 mb-2">
    <!-- Toggle Button -->
    <button id="toggleSidebar"
      class="bg-indigo-600 text-white px-3 py-2 rounded-lg hover:bg-indigo-700 transition text-sm">
      Filters & Sort
    </button>
  </div>

  <!-- Sidebar Overlay -->
  <div id="mobileSidebar" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="absolute top-0 left-0 w-3/4 max-w-xs h-full bg-white shadow-lg p-5 overflow-y-auto">

      <!-- Close Button -->
      <button id="closeSidebar" class="text-gray-600 hover:text-red-600 mb-4">
        âœ• Close
      </button>

      <!-- Sort Section -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold mb-3">Sort by</h3>
        <form action="/shop">
          <select class="border px-3 py-2 rounded-md w-full" name="sortby">
            <option value="popular">Popular</option>
            <option value="newest">Newest</option>
          </select>
        </form>
      </div>

      <!-- Collections -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold mb-3">Collections</h3>
        <div class="flex flex-col gap-2 text-gray-700">
          <a class="hover:text-indigo-600 transition" href="">New Collection</a>
          <a class="hover:text-indigo-600 transition" href="">All Products</a>
          <a class="hover:text-indigo-600 transition" href="">Discounted Products</a>
        </div>
      </div>

      <!-- Filters -->
      <div>
        <h3 class="text-lg font-semibold mb-3">Filters</h3>
        <div class="flex flex-col gap-2 text-gray-700">
          <a class="hover:text-indigo-600 transition" href="">Availability</a>
          <a class="hover:text-indigo-600 transition" href="">Discount</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("toggleSidebar");
      const sidebar = document.getElementById("mobileSidebar");
      const closeBtn = document.getElementById("closeSidebar");

      if (btn && sidebar && closeBtn) {
        btn.addEventListener("click", () => {
          sidebar.classList.remove("hidden");
        });

        closeBtn.addEventListener("click", () => {
          sidebar.classList.add("hidden");
        });

        // Close if background clicked
        sidebar.addEventListener("click", (e) => {
          if (e.target === sidebar) {
            sidebar.classList.add("hidden");
          }
        });
      }
    });
  </script>
</body>

</html>