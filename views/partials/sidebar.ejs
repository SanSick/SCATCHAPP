<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <!-- sidebar.js -->
  <aside class="w-[20%] h-screen sticky top-5 hidden md:flex flex-col bg-white rounded-xl shadow-md p-5">

    <!-- Sort Section -->
    <div class="mb-8">
      <h3 class="text-lg font-semibold mb-3">Sort by</h3>
      <form action="/shop">
        <select class="border outline-none px-3 py-2 rounded-md w-full" name="sortby">
          <option value="beauty">Beauty</option>
          <option value="fashion">Fashion</option>
          <option value="mobiles&tables">Mobiles & Tables</option>
          <option value="home&furniture">Home & Furniture</option>
          <option value="electronics">Electronics</option>
          <option value="lifestyle">LifeStyle</option>
        </select>
      </form>
    </div>

    <!-- Collections -->
    <div class="mb-8">
      <h3 class="text-lg font-semibold mb-3">Collections</h3>
      <div class="flex flex-col gap-2 text-gray-700">
        <a class="hover:text-indigo-600 transition" href="">All Products</a>
        <a class="hover:text-indigo-600 transition" href="">New Collection</a>
        <a class="hover:text-indigo-600 transition" href="">Discounted Products</a>
      </div>
    </div>

    <!-- Filters -->
    <div>
      <h3 class="text-lg font-semibold mb-3">Filters</h3>
      <div class="flex flex-col gap-2 text-gray-700">
        <a class="hover:text-indigo-600 transition" href="">Availability</a>
        <a class="hover:text-indigo-600 transition" href="">Category</a>
      </div>
    </div>
  </aside>
</body>

</html>