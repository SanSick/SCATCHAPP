<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="bg-gray-100">
  <%- include('./partials/header') %>
    <% if(success.length> 0) { %>
      <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white ">
          <%= success %>
        </span>
      </div>
      <% } %>

        <div class="min-h-screen flex flex-col">
          <div class="container mx-auto px-4 py-10 flex flex-col md:flex-row gap-6 flex-grow">

            <!-- Sidebar -->
            <aside class="w-full md:w-1/5 bg-white p-4 rounded-lg shadow-md">
              <nav class="flex flex-col gap-3 mt-8">
                <a class="text-gray-600 text-lg hover:text-blue-600" href="/products">All Products</a>
                <a class="text-gray-600 text-lg hover:text-blue-600 font-semibold" href="/products/create">Create New
                  Product</a>
              </nav>
            </aside>

            <!-- Main Form -->
            <main class="w-full md:w-4/5 bg-white p-6 md:p-10 rounded-lg shadow-md">
              <h2 class="text-2xl md:text-3xl font-bold mb-6">Create New Product</h2>

              <form action="/products/create" method="POST" enctype="multipart/form-data" class="space-y-6">
                <!-- Image -->
                <div>
                  <label class="block mb-2 font-medium">Product Image</label>
                  <input name="image" type="file" accept="image/*"
                    class="w-full border rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Name + Price + Category -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                  <input name="name" type="text" placeholder="Product Name" required
                    class="border p-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500">

                  <input name="price" type="number" placeholder="Product Price" min="0" step="0.01" required
                    class="border p-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500">

                  <input name="category" type="text" placeholder="Category" required
                    class="border p-2 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Description -->
                <div>
                  <label class="block mb-2 font-medium">Description</label>
                  <textarea name="description" rows="4" placeholder="Write a short description..."
                    class="w-full border p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                </div>

                <!-- Submit -->
                <button type="submit"
                  class="w-full sm:w-auto bg-blue-600 text-white px-6 py-2 rounded-md font-medium hover:bg-blue-700 transition">
                  Create Product
                </button>
              </form>
            </main>
          </div>
        </div>

        <%- include('./partials/footer') %>
</body>

</html>