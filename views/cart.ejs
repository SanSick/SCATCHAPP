<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <%- include('./partials/header') %>

        <div class="container mx-auto px-2 sm:px-6 lg:px-8 py-6 sm:py-10 flex flex-col lg:flex-row gap-6">

            <!-- Left side: Cart items -->
            <div class="lg:w-3/4 bg-white p-3 sm:p-6 rounded-lg shadow">
                <h2 class="text-xl sm:text-2xl font-semibold mb-4 sm:mb-6 border-b pb-3">Shopping Cart</h2>

                <% if(user.cart.length===0) { %>
                    <p class="text-gray-600">Your cart is empty.</p>
                    <% } else { %>
                        <% user.cart.forEach(product=> { %>
                            <div class="flex gap-3 sm:gap-6 border-b py-4 sm:py-6">

                                <!-- Product Image -->
                                <div class="w-24 h-24 sm:w-40 sm:h-40 flex-shrink-0">
                                    <img src="<%= product.image %>" alt="<%= product.name %>"
                                        class="w-full h-full object-contain">
                                </div>

                                <!-- Right side: Product details -->
                                <div class="flex-1 flex flex-col justify-between">
                                    <!-- Top info (always beside image) -->
                                    <div>
                                        <h3 class="text-sm sm:text-xl font-semibold mb-1">
                                            <%= product.name %>
                                        </h3>
                                        <p class="text-green-600 font-medium mb-1 text-xs sm:text-base">In Stock</p>
                                        <p class="text-gray-700 font-medium text-sm sm:text-lg">₹<%= product.price %>
                                        </p>
                                        <p class="text-xs sm:text-sm text-gray-500">Eligible for FREE Delivery</p>
                                    </div>

                                    <!-- Actions (below info) -->
                                    <div class="flex flex-wrap items-center gap-3 mt-3">
                                        <!-- Quantity Setter -->
                                        <form action="/cart/update/<%= product._id %>" method="POST"
                                            class="flex items-center gap-2">
                                            <button type="submit" name="action" value="decrease"
                                                class="px-2 py-1 border rounded">-</button>
                                            <span class="px-3 py-1 border rounded bg-gray-100">1</span>
                                            <button type="submit" name="action" value="increase"
                                                class="px-2 py-1 border rounded">+</button>
                                        </form>

                                        <!-- Remove -->
                                        <a href="/cart/remove/<%= product._id %>"
                                            class="text-red-600 hover:underline text-xs sm:text-sm">Remove</a>

                                        <!-- See more like this -->
                                        <a href="/products/<%= product._id %>/similar"
                                            class="text-blue-600 hover:underline text-xs sm:text-sm">See more like
                                            this</a>
                                    </div>
                                </div>

                                <!-- Price aligned right (desktop only, hidden on mobile) -->
                                <div class="hidden sm:block text-lg font-semibold sm:text-right">
                                    ₹<%= product.price %>
                                </div>
                            </div>
                            <% }) %>
                                <% } %>
            </div>

            <!-- Right side: Summary -->
            <div class="lg:w-1/4 bg-white p-4 sm:p-6 rounded-lg shadow h-fit">
                <h2 class="text-lg font-medium mb-4">Order Summary</h2>

                <% let total=0; %>
                    <% user.cart.forEach(product=> { total += product.price; }) %>

                        <p class="text-gray-700 mb-2">Subtotal (<%= user.cart.length %> items):
                                <span class="font-semibold">₹<%= total %></span>
                        </p>
                        <p class="text-green-600 text-sm mb-4">Your order is eligible for FREE Delivery</p>

                        <a href="/checkout"
                            class="block w-full text-center bg-yellow-400 hover:bg-yellow-500 text-black font-medium py-2 rounded-lg">
                            Proceed to Buy
                        </a>
            </div>
        </div>

        <%- include('./partials/footer') %>
</body>

</html>