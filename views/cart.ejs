<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <%- include('./partials/header') %>

        <div class="container mx-auto px-0 sm:px-6 lg:px-8 py-6 sm:py-10 flex flex-col lg:flex-row gap-6">

            <!-- Left side: Cart items -->
            <div class="lg:w-3/4 bg-white py-3 sm:p-6 sm:rounded-lg shadow">
                <h2 class="text-xl sm:text-2xl font-semibold mb-4 sm:mb-6 border-b pb-3 
           text-center sm:text-left">
                    Shopping Cart
                </h2>


                <% if(user.cart.length===0) { %>
                    <p class="text-gray-600">Your cart is empty.</p>
                    <% } else { %>
                        <% user.cart.forEach(item=> { %>
                            <div class="flex gap-4 sm:gap-6 border-b py-4 sm:py-6">

                                <!-- Product Image -->
                                <a href="/products/<%= item.product._id %>"
                                    class="w-24 h-24 sm:w-40 sm:h-40 flex-shrink-0">
                                    <img src="<%= item.product.image %>" alt="<%= item.product.name %>"
                                        class="w-full h-full object-contain">
                                </a>

                                <!-- Right side: Product details -->
                                <div class="flex-1 flex flex-col justify-between">
                                    <!-- Top info (always beside image) -->
                                    <div>
                                        <a href="/products/<%= item.product._id %>"
                                            class="text-sm sm:text-xl font-semibold mb-1">
                                            <%= item.product.name %> <span
                                                    class="text-xs sm:text-base ml-2 text-gray-700 font-normal mb-1">(<%= item.product.category %>)
                                                </span>
                                        </a>
                                        <p
                                            class=" font-medium <%= item.product.inStock ? 'text-green-600' : 'text-red-600' %>  mb-1 text-xs sm:text-base">
                                            <%= item.product.inStock ? "InStock" : "Out of S" %>
                                        </p>
                                        <div class="flex items-center ">
                                            <p class="text-gray-700 font-medium text-sm sm:text-lg">$ <%= item.product.price %> <span class="text-gray-700 font-normal text-sm sm:text-normal" >(per unit)</span>
                                        </div>
                                        </p>
                                        <p class="text-xs sm:text-sm text-gray-500">Eligible for FREE Delivery</p>
                                    </div>

                                    <!-- Actions (below info) -->
                                    <div class="flex flex-wrap items-center gap-3 sm:gap-5 mt-3">
                                        <!-- Quantity Setter -->
                                        <div
                                            class="flex items-center border border-gray-400 rounded-md overflow-hidden">
                                            <a href="/cart/decreasequantity/<%= item.product._id %>" id="decrease"
                                                class="px-3 py-2 font-semibold hover:bg-gray-100">
                                                <i class="ri-subtract-fill"></i>
                                            </a>
                                            <input id="quantity" type="number" value="<%= item.quantity %>" min="1"
                                                class="w-14 text-center font-semibold border-0 focus:ring-0 outline-none no-spinner">
                                            <a href="/cart/increasequantity/<%= item.product._id %>" id="increase"
                                                class="px-3 py-2 font-semibold hover:bg-gray-100">
                                                <i class="ri-add-fill"></i>
                                            </a>
                                        </div>

                                        <!-- Remove -->
                                        <div class="flex flex-wrap items-center gap-2">
                                            <form action="/cart/remove/<%= item.product._id %>" method="post"
                                                style="display:inline;">
                                                <button type="submit" class="px-3 py-1 sm:py-2 text-xs sm:text-base font-medium
                                                       text-red-700 bg-red-100 border border-red-300
                                                       rounded-lg hover:bg-red-200
                                                       transition">
                                                    Remove
                                                </button>
                                            </form>

                                            <a href="/products/<%= item.product._id %>/similar" class="px-3 py-1 sm:py-2 text-xs sm:text-base font-medium
                                                      text-blue-700 bg-blue-100 border border-blue-300
                                                      rounded-lg hover:bg-blue-200
                                                      transition inline-block">
                                                See more like this
                                            </a>
                                        </div>


                                    </div>
                                </div>

                                <!-- Price aligned right (desktop only, hidden on mobile) -->
                                <div class="hidden sm:block text-lg font-semibold sm:text-right">
                                    $<%= (item.product.price * item.quantity).toFixed(2) %>
                                  </div>
                            </div>
                            <% }) %>
                                <% } %>
            </div>

            <!-- Right side: Summary -->
            <div class="lg:w-1/4 bg-white p-4 sm:p-6 rounded-lg shadow h-fit">
                <h2 class="text-lg font-medium mb-4">Order Summary</h2>

                <% let total=0; %>
                <% let itemCount=0; %>
                    <% user.cart.forEach(item=> { total += item.product.price * item.quantity;
                        itemCount += item.quantity; }) %>

                        <p class="text-gray-700 mb-2">Subtotal (<%= itemCount %> items):
                                <span class="font-semibold">$ <%= total.toFixed(2) %></span>
                        </p>
                        <p class="text-green-600 text-sm mb-4">Your order is eligible for FREE Delivery</p>

                        <a href="/checkout"
                            class="block w-full text-center bg-yellow-400 hover:bg-yellow-500 text-black font-medium py-2 rounded-lg">
                            Proceed to Buy
                        </a>
            </div>
        </div>

        <%- include('./partials/footer') %>

